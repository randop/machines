#!/usr/bin/env bash
pacman -S gnupg openssh pass
gpg --full-generate-key
gpg --armor --export 880DF768F4C2A473
git config --global user.signingkey 880DF768F4C2A473
pass init 880DF768F4C2A473

# GPG agent setup
echo "use-agent" >>~/.gnupg/gpg.conf

# Set timeout to 1 hour
echo "default-cache-ttl 3600" >>~/.gnupg/gpg-agent.conf
echo "max-cache-ttl 3600" >>~/.gnupg/gpg-agent.conf

# To apply the changes, reload the GPG agent:
gpgconf --reload gpg-agent
